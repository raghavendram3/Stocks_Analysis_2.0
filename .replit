modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "pip install yfinance plotly pandas && streamlit run app.py --server.port 5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "StockAnalysisApp"

[[workflows.workflow]]
name = "StockAnalysisApp"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run home.py --server.port=5000 --server.address=0.0.0.0"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
